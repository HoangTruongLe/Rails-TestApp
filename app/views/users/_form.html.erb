<%= render "shared/errors", obj: @user %>

<%= form_for(@user) do |f| %>
  
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username, :autocomplete => :off %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, :autocomplete => :off %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, :autocomplete => :off %>
  </div>
  <div class="actions">
    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary')%>
  </div>
<% end %>
